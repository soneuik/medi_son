<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:background="@drawable/b12"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below ="@+id/txt_sleep"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_sleep"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:text="수면"
                android:textColor="@color/img_btn_background"
                android:textSize="100px"
                android:layout_marginTop="50px"
                android:layout_marginBottom="50px"
                android:layout_marginLeft="50px"
                >
            </TextView>


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-60px"
                android:columnCount="2"
                android:orientation="horizontal"
                android:layout_marginBottom="50px"
                android:rowCount="1">

                <ImageButton
                    android:id="@+id/c1_btn"
                    android:layout_width="400px"
                    android:layout_height="450px"
                    android:layout_marginLeft="33sp"
                    android:layout_marginTop="50px"
                    android:adjustViewBounds="true"
                    android:background="@drawable/main_button"
                    android:scaleType="centerInside"
                    android:src="@drawable/c1" />

                <ImageButton
                    android:id="@+id/c2_btn"
                    android:layout_width="400px"
                    android:layout_height="450px"
                    android:layout_marginLeft="33sp"
                    android:layout_marginTop="50px"
                    android:adjustViewBounds="true"
                    android:background="@drawable/main_button"
                    android:scaleType="centerInside"
                    android:src="@drawable/c2" />
            </GridLayout>


            <TextView
                android:id="@+id/txt_sleep_rec"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:text="추천곡"
                android:textColor="@color/img_btn_background"
                android:textSize="100px"
                android:layout_marginTop="50px"
                android:layout_marginBottom="50px"
                android:layout_marginLeft="50px"
                >
            </TextView>

            <LinearLayout
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="50px"
                    android:src="@drawable/c1" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:textSize="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="100px"
                    android:text="잠 잘오게 하기" />

                <ImageView
                    android:id="@+id/play_btn"
                    android:layout_width="43dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="80px"
                    android:src="@drawable/play" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="50px"
                    android:src="@drawable/c1" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:textSize="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="100px"
                    android:text="잠 잘오게 하기" />

                <ImageView
                    android:id="@+id/play_btn2"
                    android:layout_width="43dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="80px"
                    android:src="@drawable/play" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="50px"
                    android:src="@drawable/c1" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:textSize="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="100px"
                    android:text="잠 잘오게 하기" />

                <ImageView
                    android:id="@+id/play_btn3"
                    android:layout_width="43dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="80px"
                    android:src="@drawable/play" />
            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="1"
                android:orientation="horizontal"
                android:layout_marginTop="100px"
                android:rowCount="3">

            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="5"
                android:orientation="horizontal"
                android:rowCount="2">

                <ImageButton
                    android:id="@+id/row1_1"
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_marginLeft="50px"
                    android:adjustViewBounds="true"
                    android:background="@drawable/main_button"
                    android:scaleType="centerInside"
                    android:src="@drawable/r1" />

                <ImageButton
                    android:id="@+id/row1_2"
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_marginLeft="50px"
                    android:adjustViewBounds="true"
                    android:background="@drawable/main_button"
                    android:scaleType="centerInside"
                    android:src="@drawable/r2" />

                <ImageButton
                    android:id="@+id/row1_3"
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_marginLeft="50px"
                    android:background="@drawable/b12"
                    android:src="@drawable/r3" />

                <ImageButton
                    android:id="@+id/row1_4"
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_marginLeft="50px"
                    android:background="@drawable/b12"
                    android:src="@drawable/r4" />

                <ImageButton
                    android:id="@+id/row1_5"
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_marginLeft="50px"
                    android:background="@drawable/b12"
                    android:src="@drawable/w1" />


                <ImageButton
                    android:id="@+id/row2_1"
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_marginLeft="50px"
                    android:layout_marginTop="25px"
                    android:background="@drawable/b12"
                    android:src="@drawable/w2" />

                <ImageButton
                    android:id="@+id/row2_2"
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_marginLeft="50px"
                    android:layout_marginTop="25px"
                    android:background="@drawable/b12"
                    android:src="@drawable/w3" />

                <ImageButton
                    android:id="@+id/row2_3"
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_marginLeft="50px"
                    android:layout_marginTop="25px"
                    android:background="@drawable/b12"
                    android:src="@drawable/w4" />

                <ImageButton
                    android:id="@+id/row2_4"
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_marginLeft="50px"
                    android:layout_marginTop="25px"
                    android:background="@drawable/b12"
                    android:src="@drawable/w5" />

                <ImageButton
                    android:id="@+id/row2_5"
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_marginLeft="50px"
                    android:layout_marginTop="25px"
                    android:background="@drawable/b12"
                    android:src="@drawable/w2" />
            </GridLayout>
        </LinearLayout>


    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_menu" />


</RelativeLayout>