<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:background="@drawable/b12"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below ="@+id/txt_sleep"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_sleep"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:text="SLEEP"
                android:textColor="@color/img_btn_background"
                android:textSize="100px"
                android:layout_marginTop="50px"
                android:layout_marginBottom="50px"
                android:layout_marginLeft="50px"
                >
            </TextView>


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-60px"
                android:columnCount="2"
                android:orientation="horizontal"
                android:layout_marginBottom="50px"
                android:rowCount="1">

                <LinearLayout
                    android:id="@+id/linLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >


                    <ImageButton
                        android:id="@+id/c1_btn"
                        android:layout_width="400px"
                        android:layout_height="550px"
                        android:layout_marginLeft="33sp"
                        android:layout_marginTop="50px"
                        android:adjustViewBounds="true"
                        android:background="@drawable/main_button"
                        android:src="@drawable/w4" />


                    <TextView
                        android:id="@+id/c1_text2"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-50dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="Sleep well"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/c1_text"
                        android:layout_width="200dp"
                        android:layout_below ="@+id/c1_text"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:gravity="center"
                        android:text="      Sleep starts from brain"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >


                    <ImageButton
                        android:id="@+id/c2_btn"
                        android:layout_width="400px"
                        android:layout_height="550px"
                        android:layout_marginLeft="20sp"
                        android:layout_marginTop="50px"
                        android:adjustViewBounds="true"
                        android:background="@drawable/main_button"
                        android:src="@drawable/w2" />


                    <TextView
                        android:id="@+id/c2_text2"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-50dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="  Deep sleep"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/c2_text"
                        android:layout_width="130dp"
                        android:layout_marginLeft="5dp"
                        android:layout_below ="@+id/c2_text"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:gravity="center"
                        android:text="GOOD NIGHT"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />


                </LinearLayout>



            </GridLayout>


            <TextView
                android:id="@+id/txt_sleep_rec"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:text="RECOMMANDATION"
                android:textColor="@color/img_btn_background"
                android:textSize="60px"
                android:layout_marginBottom="50px"
                android:layout_marginLeft="50px"
                >
            </TextView>

            <LinearLayout
                android:id="@+id/lin_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="50px"
                    android:src="@drawable/w7" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:textSize="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="100px"
                    android:textColor="@color/img_btn_background"
                    android:text="Relaxation            sleep well" />


                <ImageView
                    android:id="@+id/play_btn"
                    android:layout_width="43dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="80px"
                    android:src="@drawable/play" />
            </LinearLayout>
            <TextView
                android:id="@+id/line"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:layout_below="@+id/connect_help"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bottom" />
            <LinearLayout
                android:id="@+id/lin_button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="50px"
                    android:src="@drawable/w9" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:textSize="20dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/img_btn_background"
                    android:layout_marginLeft="100px"
                    android:text="Sleep Well                  right now" />

                <ImageView
                    android:id="@+id/play_btn2"
                    android:layout_width="43dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="80px"
                    android:src="@drawable/play" />
            </LinearLayout>
            <TextView
                android:id="@+id/line2"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:layout_below="@+id/connect_help"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bottom" />
            <LinearLayout
                android:id="@+id/lin_button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="50px"
                    android:src="@drawable/w5" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:textSize="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="100px"
                    android:textColor="@color/img_btn_background"
                    android:text="Having a good dream   deep sleep" />

                <ImageView
                    android:id="@+id/play_btn3"
                    android:layout_width="43dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="80px"
                    android:src="@drawable/play" />
            </LinearLayout>
            <TextView
                android:id="@+id/line3"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal"
                android:layout_below="@+id/connect_help"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bottom" />


            <TextView
                android:id="@+id/txt_sleep_sound"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:text="SLEEP SOUND"
                android:textColor="@color/img_btn_background"
                android:textSize="60px"
                android:layout_marginTop="50px"
                android:layout_marginBottom="50px"
                android:layout_marginLeft="50px"
                >
            </TextView>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="5"
                android:orientation="horizontal"
                android:layout_marginBottom="100dp"
                android:rowCount="2">

                <ImageButton
                    android:id="@+id/row1_1"
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_marginLeft="50px"
                    android:adjustViewBounds="true"
                    android:background="@drawable/main_button"
                    android:scaleType="centerInside"
                    android:src="@drawable/r1" />

                <ImageButton
                    android:id="@+id/row1_2"
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_marginLeft="50px"
                    android:adjustViewBounds="true"
                    android:background="@drawable/main_button"
                    android:scaleType="centerInside"
                    android:src="@drawable/r2" />

                <ImageButton
                    android:id="@+id/row1_3"
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_marginLeft="50px"
                    android:background="@drawable/b12"
                    android:src="@drawable/r3" />

                <ImageButton
                    android:id="@+id/row1_4"
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_marginLeft="50px"
                    android:background="@drawable/b12"
                    android:src="@drawable/r4" />

                <ImageButton
                    android:id="@+id/row1_5"
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_marginLeft="50px"
                    android:background="@drawable/b12"
                    android:src="@drawable/w1" />


                <ImageButton
                    android:id="@+id/row2_1"
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_marginLeft="50px"
                    android:layout_marginTop="25px"
                    android:background="@drawable/b12"
                    android:src="@drawable/w2" />

                <ImageButton
                    android:id="@+id/row2_2"
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_marginLeft="50px"
                    android:layout_marginTop="25px"
                    android:background="@drawable/b12"
                    android:src="@drawable/w3" />

                <ImageButton
                    android:id="@+id/row2_3"
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_marginLeft="50px"
                    android:layout_marginTop="25px"
                    android:background="@drawable/b12"
                    android:src="@drawable/w4" />

                <ImageButton
                    android:id="@+id/row2_4"
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_marginLeft="50px"
                    android:layout_marginTop="25px"
                    android:background="@drawable/b12"
                    android:src="@drawable/w5" />

                <ImageButton
                    android:id="@+id/row2_5"
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_marginLeft="50px"
                    android:layout_marginTop="25px"
                    android:background="@drawable/b12"
                    android:src="@drawable/w2" />
            </GridLayout>
        </LinearLayout>


    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bottom"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_menu" />


</RelativeLayout>